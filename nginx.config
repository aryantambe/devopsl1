server {
  listen 80;
  server_name _;

  root /usr/share/nginx/html;
  index index.html;

  # React router support: send 404s back to index.html
  location / {
    try_files $uri /index.html;
  }

  # Static assets caching (tweak as you like)
  location ~* \.(?:js|css|png|jpg|jpeg|gif|svg|ico)$ {
    expires 30d;
    access_log off;
  }
}
